                    android:id="@+id/ESP38Button3V3"
                    style="@style/SmallButtonPin"
                    android:text="3V3" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ESP38ButtonENT"
                    style="@style/SmallButtonPin"
                    android:text="EN" />
